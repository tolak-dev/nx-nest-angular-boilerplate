{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@featstack/shared-auth-api": ["libs/shared/auth/api/src/index.ts"],
      "@featstack/shared-auth-data-access": [
        "libs/shared/auth/data-access/src/index.ts"
      ],
      "@featstack/shared-auth-domain": ["libs/shared/auth/domain/src/index.ts"],
      "@featstack/shared-auth-feature": [
        "libs/shared/auth/feature/src/index.ts"
      ],
      "@featstack/shared-auth-infrastructure": [
        "libs/shared/auth/infrastructure/src/index.ts"
      ],
      "@featstack/shared-auth-ui": ["libs/shared/auth/ui/src/index.ts"],
      "@featstack/shared-environments": [
        "libs/shared/environments/src/index.ts"
      ],
      "@featstack/shared-notifications": [
        "libs/shared/notifications/src/index.ts"
      ],
      "@featstack/shared-ui-components": [
        "libs/shared/ui-components/src/index.ts"
      ],
      "@featstack/shared-utils": ["libs/shared/utils/src/index.ts"]
    },
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules", "tmp"]
}
